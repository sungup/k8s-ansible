apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: "{{ metallb_address_pool_name }}"
  namespace: "metallb-system"
spec:
  addresses:
    - "{{ metallb_address_pool_range }}"

---

apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: "{{ metallb_address_pool_name }}-advertisement"
  namespace: "metallb-system"
spec:
  ipAddressPools:
    - "{{ metallb_address_pool_name }}"
